<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ComboBox?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sistema.ordenes.controller.AddProductController">
   <children>
      <VBox layoutX="25.0" layoutY="20.0" prefWidth="250.0" spacing="10.0">
         <children>
            <Label text="Registrar Producto">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Label text="Nombre del Producto:" />
            <TextField fx:id="txtName" />
            <Label text="Marca:" />
            <javafx.scene.layout.HBox spacing="5.0">
               <children>
                  <ComboBox fx:id="cmbBrand" prefWidth="200.0" promptText="Seleccione marca..." />
                  <Button onAction="#openAddBrandWindow" text="+" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" />
               </children>
            </javafx.scene.layout.HBox>
            <Label text="Cantidad en Stock:" />
            <TextField fx:id="txtStock" />
            <Label text="Precio Unitario:" />
            <TextField fx:id="txtPrice" />
            <Button fx:id="btnSave" maxWidth="Infinity" onAction="#saveProduct" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Guardar en Base de Datos">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>